{
  "compilerOptions": {
    "target": "ES2020",               
    "module": "ESNext",               
    "moduleResolution": "node",      
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,                   
    "esModuleInterop": true,          
    "skipLibCheck": true,
    "types": ["vitest/globals", "node"]           
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules", "dist"],
}